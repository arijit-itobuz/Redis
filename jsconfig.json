{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "target": "ESNext",
    "outDir": "./dist",
    "checkJs": true,
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "noEmit": true,
    "removeComments": true
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["node_modules", "dist"]
}
